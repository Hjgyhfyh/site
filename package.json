{
    "name": "arena",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "build": "npm run build:js && npm run build:css",
        "build:js": "esbuild enhanced-app.jsx --outfile=public/enhanced-app.js --loader:.jsx=jsx --target=es2018 --minify",
        "build:css": "tailwindcss -i ./src/tailwind.css -o ./public/tailwind.css --minify",
        "start": "electron .",
        "dev": "node server.js"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "jsonwebtoken": "^9.0.3"
    },
    "devDependencies": {
        "esbuild": "^0.25.10",
        "electron": "^33.0.0",
        "tailwindcss": "^3.4.17"
    }
}
